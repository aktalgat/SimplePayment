<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="horizontal" >

    <!-- Title Of Payment-->
    <TextView
        android:id="@+id/pay_log_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:textColor="@color/listFirstColor"
        android:textSize="16sp"/>

    <!-- Date from to -->
    <TextView
        android:id="@+id/pay_log_period"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_log_name"
        android:textColor="@color/listSecondColor"
        android:textSize="16sp"
        android:layout_marginLeft="22dp" />

    <!-- Sum income -->
    <TextView
        android:id="@+id/pay_sum_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/pay_log_name"
        android:gravity="right"
        android:layout_marginRight="16dp"
        android:textColor="@color/sum_income"
        android:textSize="16sp" />

    <!-- Sum expense -->
    <TextView
        android:id="@+id/pay_sum_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:textColor="@color/sum_expense" />

</RelativeLayout>